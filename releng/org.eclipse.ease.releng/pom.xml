<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.eclipse.ease</groupId>
	<artifactId>org.eclipse.ease.releng</artifactId>
	<version>0.1.1-SNAPSHOT</version>
	<packaging>pom</packaging>


	<properties>
		<tycho-version>0.21.0</tycho-version>
	</properties>


	<repositories>
		<repository>
			<id>kepler</id>
			<layout>p2</layout>
			<url>http://download.eclipse.org/releases/kepler</url>
		</repository>
	</repositories>

	
	<build>
		<plugins>
			<plugin>
				<!-- enable tycho build extension -->
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-maven-plugin</artifactId>
				<version>${tycho-version}</version>
				<extensions>true</extensions>
			</plugin>

			<!-- set compiler compliance level -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.5.1</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
		</plugins>
	</build>


	<modules>

		<!-- core -->
		<module>../../plugins/core/org.eclipse.ease</module>
		<module>../../plugins/core/org.eclipse.ease.ui</module>
		<module>../../plugins/core/org.eclipse.ease.storedscript</module>

		<!-- Javascript -->
		<module>../../plugins/engines/org.eclipse.ease.engine.javascript</module>
		<module>../../plugins/engines/org.eclipse.ease.lang.javascript.ui</module>
		<module>../../plugins/engines/org.eclipse.ease.engine.javascript.rhino</module>
		<module>../../plugins/engines/org.eclipse.ease.engine.javascript.rhino.debugger</module>

		<!-- Python -->
		<module>../../plugins/engines/org.eclipse.ease.lang.python</module>

		<!-- Modules -->
		<module>../../plugins/modules/org.eclipse.ease.module.platform</module>
		<module>../../plugins/modules/org.eclipse.ease.modules.incubation</module>

		<!-- features -->
		<module>../../features/org.eclipse.ease.feature</module>
		<module>../../features/org.eclipse.ease.ui.feature</module>
		<module>../../features/org.eclipse.ease.javascript.feature</module>
		<module>../../features/org.eclipse.ease.modules.feature</module>
		<module>../../features/org.eclipse.ease.python.feature</module>

		<!-- releng -->
		<module>../org.eclipse.ease.releng.target</module>
		<module>../org.eclipse.ease.releng.p2</module>

