<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<groupId>org.eclipse.ease</groupId>
	<artifactId>ease</artifactId>
	<version>0.2.0-SNAPSHOT</version>

	<name>EASE</name>
	<packaging>pom</packaging>

	<properties>
		<!-- used plugin versions -->
		<tycho.version>0.21.0</tycho.version>
		<tycho.extras.version>${tycho.version}</tycho.extras.version>
	</properties>

	<modules>
		<module>ease.core</module>
		<module>ease.modules</module>
	</modules>

	<profiles>
		<profile>
			<id>sonar</id>

			<properties>
				<sonar.global.exclusions>file:**/src-gen/**/*</sonar.global.exclusions>

				<!-- see http://stackoverflow.com/questions/21825469/configure-sonar-sonar-issue-ignore-multicriteria-through-maven -->
				<sonar.issue.ignore.multicriteria>e1,e2</sonar.issue.ignore.multicriteria>

				<!-- if/else/for/while/do statements should always use curly braces -->
				<sonar.issue.ignore.multicriteria.e1.ruleKey>squid:S00121</sonar.issue.ignore.multicriteria.e1.ruleKey>
				<sonar.issue.ignore.multicriteria.e1.resourceKey>file:**/*.java</sonar.issue.ignore.multicriteria.e1.resourceKey>

				<sonar.issue.ignore.multicriteria.e2.ruleKey>squid:S00121</sonar.issue.ignore.multicriteria.e2.ruleKey>
				<sonar.issue.ignore.multicriteria.e2.resourceKey>**/*.java</sonar.issue.ignore.multicriteria.e2.resourceKey>
			</properties>
		</profile>

		<profile>
			<id>update-p2</id>

			<build>
				<plugins>

					<!-- enable module documentation builder -->
					<plugin>
						<artifactId>tycho-p2-extras-plugin</artifactId>
						<groupId>org.eclipse.tycho.extras</groupId>
						<version>${tycho.extras.version}</version>
						<executions>
							<execution>
								<id>addModules</id>
								<phase>install</phase>
								<goals>
									<goal>mirror</goal>
								</goals>
								<configuration>
									<source>
										<repository>
											<url>${SOURCE}</url>
										</repository>
									</source>
									<append>true</append>
									<latestVersionOnly>false</latestVersionOnly>
									<destination>${DESTINATION}</destination>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>  